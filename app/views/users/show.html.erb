<div class="container">
    <div class="row">
      <h1>
        <%= @user.name %>
        <% if logged_in? %>
        <% if current_user.admin? && !current_user?(@user) %>
            | <%= link_to "delete", @user, method: :delete,
                                  data: { confirm: "You sure?" } %>
                                  <% end %>
        <% end %>
      </h1>
    </div>
</div>
<div class="container" id="reviewsContainer">
  <% if @user.reviews.any? %>
    <%= render @reviews %>
    <%= will_paginate @reviews %>
  <% end %>
</div>