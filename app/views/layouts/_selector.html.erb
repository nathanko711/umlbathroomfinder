
<%= form_tag({controller: "navbar"}, class:"navbar-form navbar-right") do %>
    <button type="button" class="btn btn-info" onclick="getLocation()">
      Locate Me!
    </button> 
    <%= select_tag(:selectpicker2, 
    
    options_for_select(
        Floor.all.uniq.pluck(:building).sort!.map {
          |building|
          [building, "#{building.downcase.capitalize.delete(?').tr ' ', ?_ }"]          
        }
      ), {"title":"Building", :id => 'selectpicker2', :class => 'selectpicker', "data-container":"body", "data-width" => "100px"}
      
    ) %>
    
    <%= select_tag(:selectpicker3, 
    
    options_for_select(
        Floor.all.uniq.pluck(:floor_level).sort!.map {
          |floor_level|
          ["#{floor_level}" + "F", floor_level]
        }
      ), {"title":"Floor",:class => 'selectpicker', "data-container":"body", "data-width" => "100px"}
      
    ) %>


  
  <div class="btn-group">
  <%= submit_tag("Find Bathroom", class: "btn btn-success") %>
  </div>
<% end %>

