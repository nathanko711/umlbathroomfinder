<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@floor) do |f| %>
      <%= render 'shared/floor_error_messages' %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      
      <%= f.file_field :picture %>

      <%= f.submit "Edit the floor", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@bathroom) do |f| %>
      <%= hidden_field_tag :floor_id, @floor.id %>

      <%= f.label :title %>
      <%= f.text_field :title%>
      
      <%= f.label :coord %>
      <%= f.text_field :coord %>
      
      <%= f.label :shape %>
      <%= f.text_field :shape%>
      
      <%= f.file_field :picture %>

      <%= f.submit "Add new bathroom", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>