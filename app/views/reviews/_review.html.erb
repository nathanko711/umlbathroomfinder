<div class="row" style="padding-top: 25px;" id="reviewTest" data-turbolinks-permanent>
  <div class="col-sm-1 col-sm-offset-1 rateit" data-rateit-value="<%= review.rating %>" data-rateit-ispreset="true" data-rateit-readonly="true">
  </div>
  <div class="col-sm-10">
     <p><b><%= review.title %></b>
        <% if logged_in? %>
        <% if current_user.admin? || current_user?(review.user) %>
         | <%= link_to "Delete Comment", review, method: :delete,
                                        data: { confirm: "You sure?" } %>
        <% end %>
      <% end %>
      </p>

  </div>
  <div class="col-sm-10 col-sm-offset-1">
     <p><i>By <%= link_to review.user.name, review.user %> on <%= review.created_at.to_date.to_formatted_s(:long)  %></i><p>
  </div>
  <div class="col-sm-10 col-sm-offset-1">
     <p><%= review.content %></p>
  </div>
</div>

